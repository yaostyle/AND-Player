<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="@dimen/song_list_height"
    android:padding="8dp"
    android:background="@color/albumBackground">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@mipmap/ic_circle_play"/>

    <TextView
        android:id="@+id/song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingLeft="8dp"
        android:textSize="@dimen/song_title_text_size"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/song_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textStyle="bold"
        android:textColor="@color/songColor"
        android:textAlignment="center"
        android:textSize="@dimen/song_primary_text_size"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/songColor"
        android:textAlignment="center"
        android:textSize="@dimen/song_primary_text_size"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/songColor"
        android:textAlignment="center"
        android:textSize="@dimen/song_primary_text_size"
        android:layout_gravity="center"/>

</LinearLayout>